<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Caption</th>
      <th>Location</th>
      <th>Date</th>
      <th>Time</th>
      <th>Like count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= image_tag post.image_url(:thumb) if post.image? %></td>
        <td><%= post.caption %></td>
        <td><%= post.location %></td>
        <td><%= post.date %></td>
        <td><%= post.time %></td>
        <td><%= post.like_count %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Like', like_post_path(post.id), :method => :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

