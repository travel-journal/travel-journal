<div class="thumbnail-row">
  <% @post_array.each do |post, index| %>
    <% if post.image? %>
      <%= image_tag post.image_url(:thumb) %>
    <% end %>
  <% end %>
</div>

<div class="row">
  <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">
    <div class="post-container">
      <h2 class="center-heading">Verify Upload</h2>
      <%= form_for(@post) do |f| %>
        <%= image_tag @post_array[0].image_url(:post) %>
        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title, :class => "form-control" , :value => @post_array[0].title %>
        </div>
        <div class="field">
          <%= f.label :caption %><br>
          <%= f.text_area :caption, :class => "form-control" , :value => @post_array[0].caption %>
        </div>
        <div class="field">
          <%= f.label :location %><br>
          <%= f.text_area :location, :class => "form-control" , :value => @post_array[0].location %>
        </div>
        <%= link_to "Submit", new_multi_post_path(@post_array[0])%>
      <% end %>
    </div>
  </div>
</div>
