<div class="row">
  <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
    <div class="posts">
      <div class="trip-details">
        <h2><%= @posts_of_day.first.trip.title %> - <%= @posts_of_day.first.date.strftime("%b %d, %Y") %></h2>              
      </div>
      <% if !@posts_of_day.empty? %>
        <% @posts_of_day.each do |p| %>
          <div class="post-container">
            <h3><%= p.title %></h3>
            <div class="post-details">
              <%= p.time.strftime("%I:%M%p") if p.time != '' %>
              <%= ', ' + p.location if p.location != '' %>
              <%= link_to '[Edit]', edit_post_path(p) %> 
              <%= link_to '[Delete]', p, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>

            <hr class="hr-one">
            <%= image_tag p.image_url(:post) if p.image? and p.image.post.file.exists? %>
            <h5><%= p.caption %></h5>

            <hr class="hr-one">
            <div class="like-count">
              <%= p.like_count %> likes
              <%= link_to '[Like]', like_post_path(p.id), :method => :post%>

              <%# modify this to be able to click on particular post %>
              <%#= link_to(p.title, day_posts_path({:date => p.date, :trip_id => p.trip_id})) %>
            </div>
            <div class="comment-container">


              <h2>Comments</h2>
              <div id="comments">
                <%= render :partial => p.comments %>
              </div>

              <%= form_for [p, Comment.new] do |f| %>
                <p>
                  <%= f.label :body, "New comment" %><br/>
                  <%= f.text_area :body %>
                </p>
                <p><%= f.submit "Add comment" %></p>
              <% end %>


            </div>
          </div>
        <% end %>
      <% end %>
      <div class="center">
        <%= link_to "\u2190 Back", trip_path(params[:trip_id])%>
      </div>
    </div>
  </div>
</div>
