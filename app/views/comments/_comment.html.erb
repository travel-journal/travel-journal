<%= div_for comment do %>
  <div class="row">
    <div class="col-xs-8">
      <%= comment.body %>
    </div>
    <div class="col-xs-4">
      <i><%= time_ago_in_words(comment.created_at) %> ago</i>
      <%= link_to destroy_comment_path(comment.post_id, comment.id), :confirm => 'Are you sure?', :method => :delete do %>
        <i class="glyphicon glyphicon-trash trash" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>
<% end %>
