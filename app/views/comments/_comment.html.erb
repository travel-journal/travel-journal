<%= div_for comment do %>
  <p>
    <strong>
      Posted <%= time_ago_in_words(comment.created_at) %> ago
    </strong>
    <br/>
    <%= comment.body %>
  </p>

  <p>
  	<%#= link_to 'Edit', update_comment_path(comment.post_id, comment.id) %>
    <%= link_to 'Delete', destroy_comment_path(comment.post_id, comment.id),
     :confirm => 'Are you sure?',
     :method => :delete %>
  </p>
<% end %>